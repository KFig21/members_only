extends layout

block content
  div.form-container
    if (!user.admin)  
      form.auth-form(action="/admin" method="POST")
        div.form-input-container
          input#passcode(type="password" name="passcode" required="true" placeholder="Enter the admin password")
          if (passcodeError)
            p(style="color: red") #{passcodeError}
        button(type="submit") Submit Password

      if (errors)
        p #{errors}

    else
      div(style="width: auto; margin: 0 auto; text-align: center")
        h2 Congrats! You're an admin!
        a(href="/")